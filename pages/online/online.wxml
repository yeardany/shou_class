<!--pages/online/online.wxml-->

<view class="cu-card article" wx:if="{{!isLogin}}">
  <view class="cu-item shadow" wx:for="{{news}}" wx:key="{{index}}">
    <view class="title">
      <view class="text-cut">{{item.title}}</view>
    </view>
    <view class="content">
      <image src="{{item.img}}" mode="aspectFill"></image>
      <view class="desc">
        <view class="text-content"> {{item.content}}</view>
      </view>
    </view>
  </view>
</view>

<view class="cu-list menu sm-border" wx:if="{{isLogin}}">
  <navigator url='/pages/online/watch?videoId={{item.videoId}}' class="cu-item arrow" wx:for="{{videoIdList}}" wx:key="{{item.id}}">
    <view class="content">
      <text class="text-grey">{{item.name}}</text>
    </view>
    <view class="action">
      <text class="text-grey text-sm">点击观看</text>
    </view>
  </navigator>
</view>